{
  "name": "kuriyr",
  "version": "0.2.3",
  "description": "Self-hosted transactional email microservice with React Email templates, i18n and monitoring dashboard",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node --import tsx dist/index.js",
    "build:dashboard": "cd dashboard && pnpm build",
    "lint": "eslint src/",
    "tsc": "tsc --noEmit",
    "generate-token": "tsx src/cli.ts generate-token"
  },
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/static": "^9.0.0",
    "@react-email/components": "^1.0.7",
    "@react-email/render": "^2.0.4",
    "better-sqlite3": "^12.6.2",
    "fastify": "^5.7.4",
    "nodemailer": "^8.0.1",
    "react": "^19.2.4",
    "tsx": "^4.21.0",
    "zod": "^4.3.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "@types/nodemailer": "^7.0.9",
    "@types/react": "^19.2.14",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
